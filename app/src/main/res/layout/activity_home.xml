<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="#FAFAFA">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to My Recipe App"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:paddingBottom="30dp"/>

    <Button
        android:id="@+id/veganButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Vegan Recipes 🌱"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="#4CAF50"
        android:textColor="#0D5302"
        android:padding="15dp"
        android:layout_marginBottom="20dp"
        android:elevation="6dp"/>

    <Button
        android:id="@+id/vegetarianButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Vegetarian Recipes 🥦"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="#8BC34A"
        android:textColor="#2E7D32"
        android:padding="15dp"
        android:layout_marginBottom="20dp"
        android:elevation="6dp"/>

    <Button
        android:id="@+id/nonVegButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Non-Vegetarian Recipes 🍗"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="#D32F2F"
        android:textColor="#750000"
        android:padding="15dp"
        android:layout_marginBottom="20dp"
        android:elevation="6dp"/>

</LinearLayout>
